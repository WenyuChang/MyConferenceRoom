<UserControl x:Class="SilverlightMuc.Debug"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        
    <Grid x:Name="LayoutRoot" Background="White">        
        <Grid.RowDefinitions>
            <RowDefinition/>                    
        </Grid.RowDefinitions>
        
        <ScrollViewer x:Name="scrollIn" Grid.Row="0">
            <TextBlock x:Name="txtDebug" TextWrapping="Wrap"/>             
        </ScrollViewer>    
    </Grid>
</UserControl>
